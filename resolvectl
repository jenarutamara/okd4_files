variant: fcos
version: 1.3.0
systemd:
  units:
    - name: systemd-resolved.service
      enabled: true
      contents: |
        [Unit]
        Description=Set dns per link!
        [Service]
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/usr/bin/systemd-resolve --interface ens4 --set-dns 10.104.64.2 --set-domain ‘~mylabzolution.com’ 
        [Install]
        WantedBy=multi-user.target
